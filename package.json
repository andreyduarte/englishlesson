{
    "name": "linguagen-ai",
    "private": true,
    "version": "1.0.0",
    "author": "LinguaGen Team",
    "description": "Personalized ESL Curriculum Generator",
    "type": "module",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:3000 && electron .\"",
        "package": "electron-builder",
        "dist": "npm run build && electron-builder",
        "publish": "npm run build && electron-builder --publish always"
    },
    "dependencies": {
        "@google/genai": "^1.30.0",
        "electron-updater": "^6.3.9",
        "lucide-react": "^0.554.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.9.6"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.17",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-react": "^5.0.0",
        "autoprefixer": "^10.4.22",
        "concurrently": "^9.2.1",
        "electron": "^39.2.3",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.2",
        "electron-squirrel-startup": "^1.0.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.17",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.linguagen.app",
        "productName": "LinguaGenAI",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        },
        "publish": {
            "provider": "github",
            "owner": "andreyduarte",
            "repo": "englishlesson"
        }
    }
}